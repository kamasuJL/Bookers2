<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
  <div class="raw">
    <div class="col-xs-12">
    <div class="row">
    <div class="side col-md-3">
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="main col-md-8 offset-md-1">
    <h3>Users</h3>
    <table class="table table-striped">
    <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
    </tr>
    </thead>
    <tbody>
    <% @Users.each do |user| %>
    <tr>
    <div>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user.id) %></td>
    </div>
    </tr>
    </tbody>
    <% end %>
    </table>
    </div>
    </div>
    </div>
  </div>
</div>