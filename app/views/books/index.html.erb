  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if user_signed_in? %>
  <h3>New book</h3>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
<% end %>

  <p>Title</p>
  <p>Opinion</p>
<% @books.each do |book| %>
  <div>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <p><%= link_to book.title, book_path(book.id) %></p>
    <p><%= book.body %></p>
    <p>ユーザーネーム:<%= book.user.name %></p>
  </div>
<% end %>