<div>
  <h2>User info</h2>
  <% if @user.present? %>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% end %>
  <h4>name&emsp;<%= @user.name %></h4>
  <h4>introduction&emsp;<%= @user.introduction %></h4>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% if user_signed_in? %>
  <h3>New book</h3>
  <%= form_with model: @bookss do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
  <% end %>
<% end %>

<div>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>投稿日時：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %>
  <% end %>
</div>