<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/17b246e958.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
        
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      
      <%= link_to "/" do %>
      <span class="navbar-brand p-3">Bookers</span>
      <% end %>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-link text-light">
          <%= link_to user_path(current_user.id) do %>
          <i class="fa-solid fa-house"></i>Home
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to users_path do %>
          <i class="fa-solid fa-users"></i>Users
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to books_path do %>
          <i class="fa-solid fa-book-open"></i>Books
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa-solid fa-right-from-bracket"></i>Log out
          <% end %>
        </li>
      <% else %>
        <li class="nav-link text-light">
          <%= link_to root_path do %>
          <i class="fa-solid fa-house"></i>Home
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to about_path do %>
          <i class="fa-solid fa-link"></i>About
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to new_user_registration_path do %>
          <i class="fa-solid fa-user-plus"></i>Sign up
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to new_user_session_path do %>
          <i class="fa-solid fa-right-to-bracket"></i>Log in
          <% end %>
        </li>
      <% end %>
      </ul>
      </div>
      </div>
      </nav>
    </header>
    
    <main>
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>   
    </main>
    <%= yield %>

    <footer class="bg-dark text-white pt-3 pb-1">
      <div class="container text-center">
      <p class="col-md">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
